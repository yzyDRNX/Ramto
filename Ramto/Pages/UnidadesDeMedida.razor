@page "/UnidadesDeMedida"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="stylesheet" href="css/UnidadesDeMedida.css">
    <title>Unidades de Medida | Ramto</title>
</head>
<body>
    <div class="container">
        <!-- Sidebar Section -->
        <aside>
            <div class="toggle">
                <div class="logo">
                    <img src="img/logo.svg" alt="logo">
                    <h2>Ram<span class="danger">to</span></h2>
                </div>
            </div>

            <div class="sidebar">
                <a href="/">
                    <span class="material-icons-sharp">home</span>
                    <h3>Inicio</h3>
                </a>
                <a href="articulos.html">
                    <span class="material-icons-sharp">inventory</span>
                    <h3>Artículos</h3>
                </a>
                <a href="proveedores.html">
                    <span class="material-icons-sharp">person_outline</span>
                    <h3>Proveedores</h3>
                </a>
                <a href="/unidades" class="active">
                    <span class="material-icons-sharp">straighten</span>
                    <h3>Unidades de Medida</h3>
                </a>
                <a href="entrada.html">
                    <span class="material-icons-sharp">input</span>
                    <h3>Entrada</h3>
                </a>
                <a href="salida.html">
                    <span class="material-icons-sharp">output</span>
                    <h3>Salida</h3>
                </a>
                <a href="remision.html">
                    <span class="material-icons-sharp">receipt_long</span>
                    <h3>Remisión</h3>
                </a>
                <a href="">
                    <span class="material-icons-sharp">settings</span>
                    <h3>Configuración</h3>
                </a>
                <a href="">
                    <span class="material-icons-sharp">logout</span>
                    <h3>Salir</h3>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main>
            <h1>Unidades de Medida</h1>
            <button class="add-button">
                <span class="material-icons-sharp">add</span>
                Agregar Unidad
            </button>

            <div class="recent-orders">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Abreviatura</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>UM001</td>
                            <td>Kilogramo</td>
                            <td>kg</td>
                            <td class="actions">
                                <span class="material-icons-sharp action-btn edit-btn">edit</span>
                                <span class="material-icons-sharp action-btn delete-btn">delete</span>
                            </td>
                        </tr>
                        <tr>
                            <td>UM002</td>
                            <td>Litro</td>
                            <td>L</td>
                            <td class="actions">
                                <span class="material-icons-sharp action-btn edit-btn">edit</span>
                                <span class="material-icons-sharp action-btn delete-btn">delete</span>
                            </td>
                        </tr>
                        <tr>
                            <td>UM003</td>
                            <td>Metro</td>
                            <td>m</td>
                            <td class="actions">
                                <span class="material-icons-sharp action-btn edit-btn">edit</span>
                                <span class="material-icons-sharp action-btn delete-btn">delete</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>


@page "/articulos"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <link rel="stylesheet" href="css/articulos.css">
    <title>Artículos | Ramto</title>
</head>
<body>
    <div class="container">
        <!-- Sidebar Section -->
        <aside>
            <div class="toggle">
                <div class="logo">
                    <img src="img/logo.svg" alt="logo">
                    <h2>Ram<span class="danger">to</span></h2>
                </div>
            </div>

            <div class="sidebar">
                <a href="index.html">
                    <span class="material-icons-sharp">home</span>
                    <h3>Inicio</h3>
                </a>
                <a href="articulos.html" class="active">
                    <span class="material-icons-sharp">inventory</span>
                    <h3>Artículos</h3>
                </a>
                <a href="proveedores.html">
                    <span class="material-icons-sharp">person_outline</span>
                    <h3>Proveedores</h3>
                </a>
                <a href="unidades.html">
                    <span class="material-icons-sharp">straighten</span>
                    <h3>Unidades de Medida</h3>
                </a>
                <a href="entrada.html">
                    <span class="material-icons-sharp">input</span>
                    <h3>Entrada</h3>
                </a>
                <a href="salida.html">
                    <span class="material-icons-sharp">output</span>
                    <h3>Salida</h3>
                </a>
                <a href="remision.html">
                    <span class="material-icons-sharp">receipt_long</span>
                    <h3>Remisión</h3>
                </a>
                <a href="">
                    <span class="material-icons-sharp">settings</span>
                    <h3>Configuración</h3>
                </a>
                <a href="">
                    <span class="material-icons-sharp">logout</span>
                    <h3>Salir</h3>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main>
            <h1>Artículos</h1>
            <button class="add-button">
                <span class="material-icons-sharp">add</span>
                Agregar Artículo
            </button>

            <div class="recent-orders">
                <table>
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Color</th>
                            <th>Stock</th>
                            <th>Precio/Metro</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>TL001</td>
                            <td>Tela de Seda Natural</td>
                            <td>Marfil</td>
                            <td>150 metros</td>
                            <td>$899.99</td>
                            <td class="actions">
                                <span class="material-icons-sharp action-btn edit-btn">edit</span>
                                <span class="material-icons-sharp action-btn delete-btn">delete</span>
                            </td>
                        </tr>
                        <tr>
                            <td>TL002</td>
                            <td>Lino Premium</td>
                            <td>Beige</td>
                            <td>200 metros</td>
                            <td>$599.99</td>
                            <td class="actions">
                                <span class="material-icons-sharp action-btn edit-btn">edit</span>
                                <span class="material-icons-sharp action-btn delete-btn">delete</span>
                            </td>
                        </tr>
                        <tr>
                            <td>TL003</td>
                            <td>Algodón Egipcio</td>
                            <td>Blanco</td>
                            <td>300 metros</td>
                            <td>$799.99</td>
                            <td class="actions">
                                <span class="material-icons-sharp action-btn edit-btn">edit</span>
                                <span class="material-icons-sharp action-btn delete-btn">delete</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>